{
  "manifest_version": 3,
  "name": "Lazy VITC",
  "version": "1.1",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "weights.json"
      ],
      "matches": [
        "*://vtopcc.vit.ac.in/*",
        "*://vtopregcc.vit.ac.in/*",
        "*://vtop.vit.ac.in/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://vtopcc.vit.ac.in/*",
        "*://vtopregcc.vit.ac.in/*",
        "*://vtop.vit.ac.in/*"
      ],
      "js": [
        "login/utils.js",
        "login/captcha.js",
        "navigation/attendance.js",
        "navigation/marks.js",
        "navigation/nav.js",
        "navigation/detector.js"
      ]
    }
  ]
}